<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:elevation="3dp"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">


    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@color/cardview_light_background">

        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/pandaaligator"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#e1e1d3"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvContCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0 "
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/imgFabBoneCV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fabbone"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>