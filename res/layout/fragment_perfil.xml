<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calamarasmtic.petagram.fragments.PerFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llMyPet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/s5"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:background="#fff"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvNombreCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asthmatic Squid"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <View
            android:id="@+id/vSeparador"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000"
            />


    </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFotosMiPet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/vSeparador"
            android:padding="20dp"
            />



</LinearLayout>
